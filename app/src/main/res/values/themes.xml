<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpoofSenseSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="newTheme" parent="Theme.SpoofSense">
        <item name="buttonStyle">@style/SpoofSense.NewButton</item>
    </style>

    <style name="SpoofSense.NewButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#568456</item>
        <item name="font">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>
</resources>